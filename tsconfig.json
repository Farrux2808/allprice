{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": false,
    "newLine": "lf",
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "test/**/*",
    ".idea/**/*",
    ".eslintrc.js",
    ".gitignore",
    ".prettierrc.js",
    "bitbucket-pipelines.yml"
  ]
}
